<div class="control">
    <input type="hidden" form="form_line_{{line.id}}" name="_csrf" value="{{csrfToken}}">
    <div class="dropdown" style="">
        
          <button class="dropdown-trigger button" aria-haspopup="true" aria-controls="dropdown-menu" style="width:300px;">
            {{--  <label for="dropdown-toggle">   --}}
            <div class="level" style="width:100%;">
                <div class="level-left">
                    @if(line.character?.image)
                    <div class="level-item">
                        <img class="image-character" src='{{line.character?.image?.publicPath}}' >
                    </div>
                    @endif
                </div>
                <div class="level-center">
                    <div class="level-item">
                            {{line.characterId?line.character.name:'Choisir un personnage'}}
                    </div>
                </div>
                <div class="level-right">
                    <div class="level-item">
                        <span class=" caret icon is-small">
                            <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </div>
                </div>
            </div>
            {{--  </label>  --}}
          </button>
        
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            @each(character in play.characters)
            <form action="/line/{{line.id}}/updateCharacter?_method=PUT" method="POST">
                {{ csrfField() }}
                <input type="hidden" name="characterId" value={{character.id}}>
                <div onclick="$(this).closest('form').submit();" class="dropdown-item is-clickable" {{line.characterId == character.id?'is-active':''}}>
                    <div class="level" style="width:100%;">
                        <div class="level-left">
                            
                            @if(line.character?.image)
                            <div class="level-item">
                            <img class="image-character" src='{{character?.image?.publicPath}}' >
                            </div>
                            @endif
                        </div>
                        <div class="level-center">
                            <div class="level-item">
                                {{character.name}}
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @endeach 
            <hr class="dropdown-divider">
            {{--  <form action="/characters" method="POST">
                {{ csrfField() }}
                <input type="hidden" name="lineId" value={{line.id}}>  --}}
                
                    <a href=# 
                    class="icon-text js-modal-trigger dropdown-item" 
                    data-target="create-character-modal" 
                    onclick="document.getElementById(this.dataset.target).classList.add('is-active');loadCharacterInfoInModal({lineId:{{line.id}}})" >
                    <span class="icon fas fa-edit" >
                    </span>
                        <span>
                            Nouveau personnage
                        </span>
                    </a>
               
            {{--  </form>  --}}
          </div>
        </div>
    </div>
</div>