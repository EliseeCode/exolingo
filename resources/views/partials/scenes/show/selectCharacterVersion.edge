
<div style="text-align:center;" class='characterSelect characterSelect_{{character.id}}'>
        <div class="character_choice character_choice_{{character.id}}" style="display: inline-grid;grid-template-columns: 250px 0px">
            
                
                    <div class="grid-character-display">
                            {{--  <img src={{character?.image?.publicPath || '/img/userBlanc.png'}}
                                 alt="image de {{character.name}}"
                                 width="30px">  --}}
                            <div class="characterName">
                            {{character.name}}
                            </div>
                            <div style="">
                                <div class="ml-2 select selectLineVersion selectLineVersion_{{character.id}}">
                                    <select data-character-id={{character.id}}>
                                        @each(version in character.versions)
                                        <option value="{{version.id}}">{{version.id+"-"+version.name}}</option>
                                        @endeach
                                        @if(auth.isLoggedIn)
                                        <option id='newLineVersionCreationOption' value="0">Cr√©er une alternative</option>
                                        @endif
                                    </select>
                                </div>
                            </div>
                    </div>
        </div>
  </div>
